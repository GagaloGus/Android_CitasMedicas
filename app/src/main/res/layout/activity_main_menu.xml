<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainMenu">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_LeftMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_rightMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_topMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottomMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="16dp" />

    <TextView
        android:id="@+id/tv_TitleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/txt_mainTitle"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/gl_rightMain"
        app:layout_constraintStart_toStartOf="@+id/gl_LeftMain"
        app:layout_constraintTop_toTopOf="@+id/gl_topMain" />

    <Button
        android:id="@+id/btn_AddMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/txt_addMedTitle"
        app:layout_constraintEnd_toStartOf="@+id/gl_rightMain"
        app:layout_constraintStart_toStartOf="@+id/gl_LeftMain"
        app:layout_constraintTop_toBottomOf="@+id/tv_TitleMain" />

    <ScrollView
        android:id="@+id/sv_Main"
        android:layout_width="297dp"
        android:layout_height="389dp"
        android:layout_marginBottom="100dp"
        android:scrollbarSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_bottomMain"
        app:layout_constraintEnd_toStartOf="@+id/gl_rightMain"
        app:layout_constraintStart_toStartOf="@+id/gl_LeftMain"
        app:layout_constraintTop_toBottomOf="@+id/btn_AddMed"
        app:layout_constraintVertical_bias="0.32">

        <LinearLayout
            android:id="@+id/linear_Main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_Primary"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/dark_white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_UP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_Med"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/ibu" />

                    <Button
                        android:id="@+id/btn_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/red"
                        android:text="X" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_prueba"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="@string/tv_med"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_prueba2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/tv_med2" />

                <LinearLayout
                    android:id="@+id/linear_Down"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_Dosis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tv_Dosis"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_NextUse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tv_NextUse"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/main_btnAgregarMed"
        style="@style/CustomAddButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Agregar medicamento"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>